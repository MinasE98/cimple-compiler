program Main
	declare x,y;
	procedure perimeter(in x,in y,inout p)
		declare a,b;
		{
			a:=2*x;
			b:=2*y;
			p:=a+b;
			print(p);
		}
	procedure area(in x,in y,inout a)
		declare c,d;
		{
			c:=x;
			d:=y;
			a:=c*d;
			print(a); 
		}
	#Main#
	{
		x:=3;
		y:=4;
		if(x<0){
			print(x);
		};
		if(y<0){
			print(y);
		};
		call perimeter(in x,in y);
		call area(in x , in y);

	}.